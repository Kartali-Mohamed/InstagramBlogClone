<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgUserID"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/elcipse"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="6dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txtNameUserID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Lastname"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imgUserID"/>

                <ImageView
                    android:id="@+id/imgDeleteID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_delete"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="8dp"
                    android:clickable="false"
                    android:visibility="invisible"/>


            </RelativeLayout>

            <ImageView
                android:id="@+id/imgPost2ID"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="#7C7A7A7A" />

            <TextView
                android:id="@+id/txtPostID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="quel que chose ici"
                android:textColor="@color/black"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="6dp"/>

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/likeID"
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:background="@drawable/ic_like"
                     android:layout_marginHorizontal="8dp"
                     android:layout_marginVertical="6dp"
                     android:layout_centerVertical="true"/>

                 <ImageView
                     android:id="@+id/commentID"
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:background="@drawable/ic_comment"
                     android:layout_marginHorizontal="8dp"
                     android:layout_marginVertical="6dp"
                     android:layout_centerVertical="true"
                     android:layout_toRightOf="@id/likeID"/>

                 <ImageView
                     android:id="@+id/envoyerID"
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:background="@drawable/ic_envoyer"
                     android:layout_marginHorizontal="8dp"
                     android:layout_marginVertical="6dp"
                     android:layout_centerVertical="true"
                     android:layout_toRightOf="@id/commentID"/>

                 <ImageView
                     android:id="@+id/saveID"
                     android:layout_width="25dp"
                     android:layout_height="30dp"
                     android:background="@drawable/enregister"
                     android:layout_marginHorizontal="10dp"
                     android:layout_marginVertical="6dp"
                     android:layout_centerVertical="true"
                     android:layout_alignParentRight="true"/>

             </RelativeLayout>

            <TextView
                android:id="@+id/txtLikeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 likes"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:id="@+id/txtDateID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="il y a heures"
                android:textColor="@android:color/tertiary_text_light"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="6dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>